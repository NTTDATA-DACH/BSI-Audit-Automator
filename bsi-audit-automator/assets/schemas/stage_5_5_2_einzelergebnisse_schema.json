{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema for Subchapter 5.5.2 Einzelergebnisse des IT-Grundschutz-Checks",
    "type": "object",
    "properties": {
      "bausteinPruefungen": {
        "type": "array",
        "description": "A list of verification results for each audited control within a Baustein.",
        "items": {
          "type": "object",
          "properties": {
            "baustein": { "type": "string", "description": "The name of the Baustein, e.g., 'ISMS.1 Sicherheitsmanagement'." },
            "zielobjekt": { "type": "string", "description": "The target system/object, e.g., 'Active Directory'." },
            "auditiertAm": { "type": "string", "format": "date" },
            "auditor": { "type": "string", "description": "Name of the auditor." },
            "befragtWurde": { "type": "string", "description": "Name of the person interviewed." },
            "anforderungen": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "nummer": { "type": "string", "description": "The control ID, e.g., 'ISMS.1.A1'." },
                  "anforderung": { "type": "string", "description": "The title of the control." },
                  "bewertung": { "type": "string", "enum": ["Korrekt", "Teilweise", "Mangelhaft", "Offen"] },
                  "dokuAntragsteller": { "type": "string", "description": "Reference to the customer's documentation." },
                  "pruefmethode": {
                    "type": "array",
                    "items": { "type": "string", "enum": ["D", "I", "C", "S", "A", "B"] }
                  },
                  "auditfeststellung": { "type": "string", "description": "The detailed finding from the auditor." },
                  "abweichungen": { "type": "string", "description": "Any deviations or recommendations." }
                },
                "required": ["nummer", "anforderung", "bewertung", "auditfeststellung"]
              }
            }
          },
          "required": ["baustein", "zielobjekt", "anforderungen"]
        }
      }
    },
    "required": ["bausteinPruefungen"]
  }